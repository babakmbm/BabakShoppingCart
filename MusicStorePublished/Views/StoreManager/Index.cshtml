@model IEnumerable<MusicStoreMVC3.Models.Album>
@helper Truncate(string input, int length){
    if (input.Length <= length){
     @input   
    }else{
     @input.Substring(0, length)<text>...</text>   
    }
    
}

@{
    ViewBag.Title = "Index";
}

<h1 style="margin-left:3px; font-family:Tahoma;">List Of Albums:</h1><br />
<ul style="list-style:none; margin-left:0; padding:15px; padding-left:0;">
    <li style="display:inline;padding:5px;"> @Html.ActionLink("Log Out", "LogOff", "Account") </li>
    <li style="display:inline;padding:5px;"> @Html.ActionLink("Create New", "Create") </li>
</ul>
<table>
    <tr>
        <th>
            Genre
        </th>
        <th>
            Artist
        </th>
        <th>
            Title
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @Truncate(item.Artist.Name, 20)
        </td>
        <td>
            @Truncate(item.Title, 20)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
