@model List<MusicStoreMVC3.Models.Album>
@{
    ViewBag.Title = "Music Store";
}
<div id="promotion"></div>
<h2 style="color:#37362C; font-size:1.6em">Search for the name of album:</h2>
@using (Html.BeginForm("Search", "Home", FormMethod.Get, 
                                         new { @class = "editForm", data_validatable=true }))
{
    <input type="text" name="sq" style="height:25px;" />
    <input type="submit" value="Search" style="width:90px; cursor:pointer;" />
}
<br />
<h3><em>Hottest </em> Albums: </h3>

<ul id="album-list">
    @foreach (var album in Model)
    {
        <li>
            <a href="@Url.Action("Details", "Store", new { id = album.AlbumId })">
                <img alt="album.Title" src ="@album.AlbumArtUrl" />
                <span>@album.Title</span>
            </a>
        </li>
    }
</ul>