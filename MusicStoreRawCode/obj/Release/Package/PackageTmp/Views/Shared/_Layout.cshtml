<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>

<body>
    <div id="header">
        <h1>Music Store</h1>
        <ul id="navlist">
            <li class="first"><a href="/" id="current"><img style="width:60px;" src="../../Content/Images/carry-home-brown-icon.png" /></a></li>
            <li class="first"><a href="/store/"><img style="width:40px;" src="../../Content/Images/Ecommerce-Shoping-bag-icon.png" /></a></li>
            <li><a href="/ShoppingCart/"><img style="width:43px;" src="../../Content/Images/Shoppingcart-icon.png" /><span style="color:#7D8852; padding: 2px 0px; font-size:15px; border-radius:5px;">@{Html.RenderAction("CartSummary", "ShoppingCart");}</span></a></li>
            <li class="first"><a href="/StoreManager/"><img style="width:45px;" src="../../Content/Images/admin-icon.png" /></a></li>
        </ul>
    </div>

    @{Html.RenderAction("GenreMenu", "Store");}

    <div id="main">
        @RenderBody()
    </div>

    <div id="footer">
        Music Store <a href="http://www.soorat.org" target="_blank">Soorat!</a>
    </div>
</body>
</html>
