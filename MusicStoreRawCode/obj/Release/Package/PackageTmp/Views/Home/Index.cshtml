@using (Html.BeginForm("Search", "Home", FormMethod.Get, 
                                         new { @class = "editForm", data_validatable=true }))
{
    <div class="form-group">
        <img src="../../Content/Images/banner-154179_1280.png" />
        <input style="width:100%;" type="text" name="sq" class="form-control" id="exampleInputEmail1" placeholder="Search for Records ...">
    </div>
}
<br />
<h3><em>Hottest </em> Albums: </h3>

<ul id="album-list">
    @foreach (var album in Model)
    {
        <li>
            <a href="@Url.Action("Details", "Store", new { id = album.AlbumId })">
                <img alt="album.Title" src ="@album.AlbumArtUrl" />
                <span>@album.Title</span>
            </a>
        </li>
    }
</ul>