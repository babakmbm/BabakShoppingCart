@model MusicStoreMVC3.Models.Order

@{
    ViewBag.Title = "Address And Payment";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    <h2>Address And Payment:</h2>
    <fieldset>
        <legend>Shipping Information</legend>

        @Html.EditorForModel()
    </fieldset>
    <fieldset>
        <legend>Payment</legend>
        <h4>We are Running a Promotion At this time: all music is Free With the Promo code: "MBM"</h4>
        <br />
        <div class="editor-label">
            @Html.Label("Promo Code")
        </div>
        <div class="editor-field">
            @Html.TextBox("PromoCode")
        </div>
    </fieldset>
    <p style="text-align:center;"><input style="height:50px; cursor:pointer;" type="submit" value="Submit Your Order" /></p><br />
}
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
